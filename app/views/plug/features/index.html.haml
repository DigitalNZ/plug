%h1 Listing features

%table
  %thead
    %tr
      %th Name
      %th Description
      %th State
      %th
      %th
      %th

  %tbody
    - @features.each do |feature|
      %tr
        %td= feature.name
        %td= feature.description
        %td= feature.state
        %td= link_to 'Show', feature
        %td= link_to 'Edit', edit_feature_path(feature)
        %td= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' }

%br

